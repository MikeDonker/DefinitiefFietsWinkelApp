PORT=3000

# Backend base URL (voor Better Auth callbacks)
BACKEND_URL=https://your-backend-url.example.com

# Supabase Postgres (pooled voor runtime, direct voor migraties)
# Vercel production:
#   DATABASE_URL  = Supabase pooled connection string
#   DIRECT_URL    = Supabase direct / non-pooled connection string
# Local development:
#   Gebruik dezelfde URL voor beide of een lokale Postgres instance.
DATABASE_URL=postgresql://user:password@localhost:5432/fietswinkel
DIRECT_URL=postgresql://user:password@localhost:5432/fietswinkel

# Supabase server-side keys
SUPABASE_URL=https://YOUR_SUPABASE_PROJECT.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Supabase frontend keys (ook in Vercel env instellen)
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_SUPABASE_PROJECT.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Auth - VERPLICHT: genereer een sterk secret
# Gebruik: openssl rand -base64 32
BETTER_AUTH_SECRET=

# OpenAI - optioneel, nodig voor AI features
# Zet FEATURE_AI=false als je geen OpenAI key hebt
OPENAI_API_KEY=
FEATURE_AI=true

# Extra CORS origins (comma-separated, optioneel)
# CORS_ORIGINS=https://mijn-domein.nl,https://staging.mijn-domein.nl