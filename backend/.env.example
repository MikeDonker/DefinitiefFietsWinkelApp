PORT=3000
# PostgreSQL: DATABASE_URL = runtime (mag pooled zijn bij Supabase/PgBouncer).
# DIRECT_URL = voor migraties (directe connectie, geen pool). Lokaal: zelfde waarde als DATABASE_URL.
DATABASE_URL=postgresql://user:password@localhost:5432/fietswinkel
DIRECT_URL=postgresql://user:password@localhost:5432/fietswinkel
BACKEND_URL=http://localhost:3000

# Auth - VERPLICHT: genereer een sterk secret
# Gebruik: openssl rand -base64 32
BETTER_AUTH_SECRET=

# OpenAI - optioneel, nodig voor AI features
# Zet FEATURE_AI=false als je geen OpenAI key hebt
OPENAI_API_KEY=
FEATURE_AI=true

# Extra CORS origins (comma-separated, optioneel)
# CORS_ORIGINS=https://mijn-domein.nl,https://staging.mijn-domein.nl